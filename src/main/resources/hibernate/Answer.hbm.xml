<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.springapp.mvc.domain">
    <class name="Answer" table="ANSWERS">
        <id name="answerId" column="ANSWER_ID">
            <generator class="native"/>
        </id>
        <property name="information" column="INFORMATION"/>

        <many-to-one name="question" class="Question"
                     column="QUESTION_ID" not-null="true"/>
    </class>
</hibernate-mapping>